<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox id="roleCardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0" spacing="10">
      <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
      </padding>
      <VBox spacing="4">
        <VBox spacing="5" alignment="CENTER_LEFT">
          <Label fx:id="companyName" text="\$companyName" styleClass="cell_big_label"/>
          <Label fx:id="roleName" text="\$roleName" styleClass="cell_small_label"/>
          <Label fx:id="deadline" text="\$deadline" styleClass="cell_tiny_label"/>
        </VBox>
      </VBox>
    </VBox>
  </GridPane>
</HBox>
